<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.toni.almacenamientosqlite.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="código artículo:"
        android:id="@+id/tvcodigo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etcodigo"
        android:layout_below="@+id/tvcodigo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="descripción:"
        android:id="@+id/textView"
        android:layout_below="@+id/etcodigo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etdescripcion"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="precio:"
        android:id="@+id/tvprecio"
        android:layout_below="@+id/etdescripcion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etprecio"
        android:layout_below="@+id/tvprecio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alta"
        android:id="@+id/btnalta"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="alta" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consulta por código"
        android:id="@+id/btncporcod"
        android:layout_below="@+id/btnalta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="consultaporcodigo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consulta por descripción"
        android:id="@+id/btncpordescripcion"
        android:layout_below="@+id/btncporcod"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="consultapordescripcion" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baja por código"
        android:id="@+id/btnbporcodigo"
        android:layout_below="@+id/btncpordescripcion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="bajaporcodigo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificación"
        android:id="@+id/btnmod"
        android:layout_below="@+id/btnbporcodigo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="modificacion" />
</RelativeLayout>
